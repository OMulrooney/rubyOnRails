<!DOCTYPE html>
<html>
  <head>
    <title>BookstoreApp</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
  <div class="container">

   <div class="d-flex flex-column flex-md-row align-items-center p-3 px-md-4 mb-3 bg-white border-bottom shadow-sm">

      <h5 class="my-0 mr-md-auto font-weight-normal"> Sheffield Bookstore </h5>

      <nav class="my-2 my-md-0 mr-md-3">


        <!-- <a class="p-2 text-dark" href="#"> Link 1 </a> -->
        <%= link_to "Home", '#' %>
<!-- <a class="p-2 text-dark" href="#"> Link 2 </a> -->
        <%= link_to "About Us", '#' %>
        <!-- <a class="p-2 text-dark" href="#"> Link 3 </a> -->
        <%= link_to "Contact Us", '#' %>
        <%= link_to "Add New Book", new_book_path %>
        <%= link_to "Add New Novel", new_novel_path %>
        <%= link_to "View Novels", novels_path %>
        <%= link_to "Add New Author", new_author_path %>
        <%= link_to "Add New Genre", new_genre_path %>
        <%= link_to "Add New Publisher", new_publisher_path %>
       
      </nav>
    </div>
</div>
    <div class="container">
      <%= yield %>
    </div>
  </body>
</html>
